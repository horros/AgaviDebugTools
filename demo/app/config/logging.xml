<?xml version="1.0" encoding="UTF-8"?>
<configurations xmlns="http://agavi.org/agavi/1.0/config">

	<configuration>

		<loggers default="debug">

			<!-- logs only DEBUG messages -->
			<logger name="debug" class="AgaviLogger" level="AgaviLogger::ALL">
				<appenders>
					<appender>DebugLogAppender</appender>
				</appenders>
			</logger>

		</loggers>
		<appenders>

			<appender name="DebugLogAppender" class="DebugToolbarLogAppender" layout="PassthruLayout">
			</appender>


		</appenders>

		<layouts>
			<layout name="PassthruLayout" class="AgaviPassthruLoggerLayout" />
		</layouts>

	</configuration>

</configurations>